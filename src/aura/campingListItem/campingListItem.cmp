<aura:component >
    
    <aura:attribute name="item" type="Camping_Item__c" required="true"  
                    default="{Name:'Tent', Price__c:100, Quantity__c:1, Packed__c:false}" />
    
    <lightning:card title="Camp Details">
        Name:<ui:outputText value="{!v.item.Name}" /><br />
        <p>Price: <lightning:formattedNumber value="{!v.item.Price__c}" style="currency"/> </p>
        <p>Quantity: <lightning:formattedNumber value="{!v.item.Quantity__c}" /> </p>
        
        <p><lightning:input type="toggle" label="Toggle value" 
                            name="togglevalue" checked="{!v.item.Packed__c}" 
                            class="slds-p-around-small" /></p>
        <p><lightning:button label="Packed" onclick="{!c.packItem}"/></p>
    </lightning:card> 

</aura:component>