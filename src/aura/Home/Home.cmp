<aura:component implements="force:appHostable,flexipage:availableForAllPageTypes" controller="FlightBooking">
    <aura:registerEvent name="bubblingEvent" type="c:processNextEvent" />
    <aura:registerEvent name="appEvent" type="c:aeEvent" />
    <!-- NEW EXPENSE FORM -->
    <aura:attribute name="flight" type="FlightDetail__c" default="{ 'sobjectType': 'FlightDetail__c',
                             Name:'Fdemo9878', 
                             from__c:'Kanpur', 
                             to__c:'Lucknow', 
                             Journey_Date__c:'2017-01-01'}" />
    <aura:attribute name="Flights" type="FlightDetail__c[]" />

    <div>

        <lightning:layout>
            <lightning:layoutItem padding="around-small" size="12" class="slds-grid--align-center">

                <!-- CREATE NEW EXPENSE -->
                <div aria-labelledby="newbookingform">

                    <!-- BOXED AREA -->
                    <fieldset class="slds-box">

                        <legend id="newbookingform" class="slds-text-heading--small 
                                                       slds-p-vertical--medium">
                            New booking  App
                        </legend>

                        <!-- CREATE NEW EXPENSE FORM -->
                        <table class="slds-table">
                            <tr>
                                <td>
                                    <lightning:input aura:id="bookingform" label="From" name="from" value="{!v.flight.from__c}" required="true" />
                                </td>
                                <td>
                                    <lightning:input aura:id="bookingform" label="To" name="to" value="{!v.flight.to__c}" required="true" />
                                </td>

                                <td>
                                    <lightning:input type="date" aura:id="bookingform" label="Journey Date" name="journeydate" value="{!v.flight.Journey_Date__c}" required="true" />
                                </td>

                                <td>

                                    <lightning:button variant="brand" class="slds-m-top--medium" label="Search" iconName="utility:search" iconPosition="left" onclick="{!c.searchFlight }" />
                                </td>
                            </tr>
                        </table>
                        <!-- / CREATE NEW EXPENSE FORM -->

                    </fieldset>
                    <!-- / BOXED AREA -->

                </div>
                <!-- / CREATE NEW EXPENSE -->

            </lightning:layoutItem>


        </lightning:layout>
        <lightning:layout>
            <lightning:layoutItem size="12">
                <div id="searchDeatils">

                    <table class="slds-table slds-table--bordered slds-table--striped">

                        <tr class="slds-text-heading--small slds-p-vertical--medium" Style="color:white;background-color:#4286f4">
                            <th>Flight Name</th>
                            <Th>Departure</Th>
                            <tH>Duration</tH>
                            <th>Arrival</th>
                            <th>Fare</th>
                            <th>Availability</th>
                            <th></th>
                        </tr>
                        <tbody>
                            <aura:iteration var="Flight" items="{!v.Flights}" indexVar="index">
                                <tr>
                                    <td>{!Flight.Name}</td>
                                    <td>{!Flight.Departure__c}</td>
                                    <td>{!Flight.Duration__c}</td>
                                    <td>{!Flight.Arrival__c}</td>
                                    <td>â‚¹ {!Flight.Fare__c}</td>
                                    <td>{!Flight.Seats__c}</td>
                                    <td>
                                        <lightning:button variant="brand" class="slds-button" label="Book" value="{!index}" onclick="{!c.gotoURL }" />
                                    </td>
                                </tr>
                            </aura:iteration>
                        </tbody>


                    </table>


                </div>
            </lightning:layoutItem>
        </lightning:layout>
        <!-- / NEW EXPENSE FORM -->
    </div>
</aura:component>